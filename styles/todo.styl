.todo
  height 58px
  border-top 1px solid #ededed
  padding-top 6px
  list-style none
  background-color white
  color rgb(77, 77, 77)

  input.edit
    display none
    width auto

  .toggle
    position relative
    vertical-align middle
    width 40px
    height 40px
    margin auto 0
    text-align center

    #checkbox
      display none

      &:checked + .svg
        position relative
        content ''
        width 40px
        height 40px
        //to work in Firefox the #'s in hex values had to be replaced with %23.  See this SO commentary: http://stackoverflow.com/questions/28588050/how-to-use-a-hex-value-for-svg-in-firefox
        background url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='-10 -18 100 135'%3E%3Ccircle cx='50' cy='50' r='50' fill='none' stroke='%23bddad5' stroke-width='3'/%3E%3Cpath fill='%235dc2af' d='M72 25L42 71 27 56l-4 4 20 20 34-52z'/%3E%3C/svg%3E") no-repeat

    .svg
      position relative
      display inline-block
      content ''
      width 40px
      height 40px
      background url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='-10 -18 100 135'%3E%3Ccircle cx='50' cy='50' r='50' fill='none' stroke='%23ededed' stroke-width='3'/%3E%3C/svg%3E") no-repeat

.destroy
    position relative
    border none
    background-color white
    float: right
    right 8px
    width: 40px;
    height: 40px;
    font-size: 30px;
    color: white;
    margin: auto 0;
    margin-bottom: 11px;
    outline: none
    transition: color 0.2s ease-out;
    transition-property: color;
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
    transition-delay: initial;

    &:hover
      display inline
      color #af5b5e

  .done
    color rgb(217, 217, 217)
    text-decoration line-through

.editing

  .label
    display none


  input.edit
    display inline
    width auto
    background-color white
    border 1px solid darkgray
    cursor auto


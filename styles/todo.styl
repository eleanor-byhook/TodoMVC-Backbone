.todo
  height 58px
  border-top 1px solid #ededed
  padding-top 6px
  list-style none
  background-color white
  color rgb(77, 77, 77)

  input.edit
    display none
    width auto

  .toggle
    position relative
    vertical-align middle
    width 40px
    height 40px
    margin auto 0
    text-align center

    #checkbox
      display none

      &:checked + .svg
        position relative
        content ''
        width 40px
        height 40px
        background url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='-10 -18 100 135'><circle cx='50' cy='50' r='50' fill='none' stroke='%23bddad5' stroke-width='3'/><path fill='%235dc2af' d='M72 25L42 71 27 56l-4 4 20 20 34-52z'/></svg>") no-repeat

    .svg
      position relative
      display inline-block
      content ''
      width 40px
      height 40px
      background url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='-10 -18 100 135'><circle cx='50' cy='50' r='50' fill='none' stroke='%23ededed' stroke-width='3'/></svg>") no-repeat

.destroy
    position relative
    border none
    background-color white
    float: right
    width: 40px;
    height: 40px;
    font-size: 30px;
    color: #cc9a9a;
    margin: auto 0;
    margin-bottom: 11px;
    outline: none

  .done
    color gray
    text-decoration line-through

.editing
  label
    display none

  input.edit
    display inline
    width auto
    background-color white
    border 1px solid darkgray
    cursor auto


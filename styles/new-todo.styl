transform(value)
  transform: value

#newTodo
  color black
  padding 16px 16px 16px 30px
  height auto
  width 91%

  &::-webkit-input-placeholder
    color rgb(220, 220, 220)
    font-style italic
  &::-moz-input-placeholder
    color rgb(220, 220, 220)
    font-style italic
  &::input-placeholder
    color rgb(220, 220, 220)
    font-style italic

.label
  width auto

.delete
  background-color red
  border none

#toggleAll
  position relative
  display inline-block
  padding-left: 10px
  width 20px
  height 20px
  padding 0
  font-size 22px
  border none
  background-color transparent
  outline none
  color rgb(230, 230, 230)
  transform rotate(90deg)

